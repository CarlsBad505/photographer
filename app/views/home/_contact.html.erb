<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Contact Me</h2>
            <h3 class="section-subheading text-muted-contact">Need help? Looking for advice? I'm available for hire, drop me a line!</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
                <div class="row">
                  <%= form_for @message, {remote: true, url: home_index_path, method: :post} do |f| %>
                    <div class="col-md-6">
                        <div class="form-group">
							            <%= f.text_field :name, class: "form-control field", placeholder: "Name *" %>
                        </div>
                        <div class="form-group">
                          <%= f.text_field :email, class: "form-control field", placeholder: "Email *" %>
                        </div>
                        <div class="form-group">
                          <%= f.text_field :phone, class: "form-control field", placeholder: "Phone *" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <%= f.text_field :comments, class: "form-control field", placeholder: "Comments *" %>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-12 text-center">
                        <div id="success"></div>
                        <%= f.submit "Send Message", class: 'btn btn-xl unique' %>
                    </div>
                  <% end %>
              </div>
        </div>
    </div>
</div>
